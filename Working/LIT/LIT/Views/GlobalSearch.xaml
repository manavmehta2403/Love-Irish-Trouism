             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LIT.Views" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behavior="clr-namespace:LIT.Core.Behaviors;assembly=LIT.Core"
        mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" MinWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LIT.Core;component/Styles/PasswordBoxStyles.xaml"/>
                <ResourceDictionary Source="/LIT.Core;component/Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="/LIT.Core;component/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/LIT.Core;component/Styles/TabItemStyles.xaml"/>
                <ResourceDictionary Source="/LIT.Core;component/Styles/ScrollBarStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Background="#579f00" Grid.Row="0" Grid.Column="0" VerticalAlignment="Stretch" Height="50" BorderThickness="0" BorderBrush="Transparent">

            <TextBlock FontFamily="Calibri" FontSize="18"  Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center" Margin="10,00,0,0" x:Name="textglobalSearch" >Global Search</TextBlock>

        </Border>
        
        <Border Background="#f4f4f4" Grid.Column="0" Grid.Row="1" BorderThickness="1" BorderBrush="#e2e3e3" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10px">
                    <TextBlock Text="Search" FontFamily="Calibri"  FontSize="14"  Foreground="#FF53555E" Padding="0,0,0,5"></TextBlock>
                    <ComboBox Cursor="Hand" x:Name="cmblistval" FontFamily="Calibri" FontSize="14"  Foreground="#FF53555E" Padding="5" VerticalAlignment="Center" SelectionChanged="cmblistval_SelectionChanged">
                        <ComboBoxItem Content = "Bookings"  />
                        <ComboBoxItem Content = "Contacts" />
                        <ComboBoxItem Content = "Itineraries" />
                        <ComboBoxItem Content = "Suppliers" />
                        <!--<i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction 
Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=DataGrid}, Path=DataContext.GlobalSearchCommand.ListSelectionChangedCommand}" 
CommandParameter="{Binding}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>-->
                    </ComboBox>
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10">
                    <TextBlock Text="Where" FontFamily="Calibri"  FontSize="14"  Foreground="#FF53555E" Padding="0,0,0,5"></TextBlock>
                    <ComboBox Cursor="Hand" x:Name="cmbSearchField" FontFamily="Calibri"  FontSize="14"  Foreground="#FF53555E"  Padding="5" VerticalAlignment="Center">
                        
                    </ComboBox>
                </StackPanel>
                <StackPanel Grid.Column="2" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10">
                    <TextBlock Text="" FontFamily="Calibri"  FontSize="14"  Foreground="#FF53555E" Padding="0,0,0,5"></TextBlock>
                    <ComboBox Cursor="Hand" x:Name="cmbfiltervalues" FontFamily="Calibri"  FontSize="14"  Foreground="#FF53555E"  Padding="5" VerticalAlignment="Center">
                        <ComboBoxItem Content = "Contains"  />
                        <ComboBoxItem Content = "Equals" />
                        <ComboBoxItem Content = "Starts With" />                        
                    </ComboBox>
                </StackPanel>


                <StackPanel Grid.Column="3" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10">
                    <TextBlock Text="the phrase" FontFamily="Calibri"  FontSize="14"  Foreground="#FF53555E" Padding="0,0,0,5"></TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="4" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10">
                    <TextBox x:Name="TxtSearchval" FontFamily="Calibri" AcceptsReturn="False"  FontSize="14" Padding="5" VerticalContentAlignment="Center" KeyUp="TxtSearchval_KeyUp" ></TextBox>
                </StackPanel>
                <StackPanel Grid.Column="5" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5">
                    <TextBlock Text="" FontFamily="Calibri"  FontSize="14"  Foreground="#FF53555E" Padding="0,0,0,0"></TextBlock>
                    <Button Cursor="Hand" x:Name="btnsearchgs"  Content="Search" Background="#252E39" Foreground="White" Style='{StaticResource blankBlue}'  VerticalContentAlignment="Center" FontSize="16" Height="35"  HorizontalAlignment="Stretch" Click="btnsearchgs_Click" />
                </StackPanel>
                <StackPanel Grid.Column="6" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5">
                    <TextBlock Text="" FontFamily="Calibri"  FontSize="14"  Foreground="#FF53555E" Padding="0,0,0,0"></TextBlock>
                    <Button Cursor="Hand" x:Name="btnclear"  Content="Clear" Background="#579f00" Foreground="White" Style='{StaticResource blankBlue}' VerticalContentAlignment="Center" FontSize="16" Height="35"  HorizontalAlignment="Stretch" Click="btnclear_Click" />
                </StackPanel> 



            </Grid>
        </Border>

