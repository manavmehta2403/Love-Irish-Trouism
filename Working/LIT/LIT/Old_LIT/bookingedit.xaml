        xmlns:local="clr-namespace:LIT"
        behavior:WindowBehavior.HideCloseButton="True"
        mc:Ignorable="d"
        Title="Booking Edit"  MinHeight="640" Height="640" Width="900" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" x:Name="bookingedt" ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LIT.Core;component/Styles/PasswordBoxStyles.xaml"/>
                <ResourceDictionary Source="/LIT.Core;component/Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="/LIT.Core;component/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/LIT.Core;component/Styles/TabItemStyles.xaml"/>
                <ResourceDictionary Source="/LIT.Core;component/Styles/ScrollBarStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="SystemCommands.CloseWindowCommand" Executed="CommandBinding_Executed" />
    </Window.CommandBindings>
    <Grid Background="#f5f5f5">
        <StackPanel Margin="10,10,10,0">
            <Grid Panel.ZIndex="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="0">
                    <Label Name="lblBooking" Height="30" Content="Bookings" FontWeight="Regular" Width="80" FontFamily="Calibri" FontSize="14" HorizontalAlignment="Left" HorizontalContentAlignment="Left"  VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center">
                    <Button Style="{StaticResource btnBlue}" x:Name="btnfirst" FontFamily="Calibri" FontSize="16" BorderBrush="Transparent" Foreground="Transparent" Background="Transparent" FontWeight="Bold" MaxWidth="20" Width="20" Height="16" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" Click="btnfirst_Click" >
                        <Image Source="/LIT.Core;component/Media/Images/next_shift.png" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" >
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="180"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="2" VerticalAlignment="Center">
                    <Button Style="{StaticResource btnBlue}" x:Name="btnPrevious" FontFamily="Calibri"   FontSize="16" BorderBrush="Transparent" Foreground="Transparent" Background="Transparent" FontWeight="Bold" MaxWidth="20" Width="20" Height="13" Cursor="Hand" VerticalAlignment="Center" VerticalContentAlignment="Center" Click="btnPrevious_Click" >
                        <Image Source="/LIT.Core;component/Media/Images/next_move.png" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="180"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>

                        </Image>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBox x:Name="txtpagerecord" TextAlignment="Center" Height="25" Template="{StaticResource TextBoxBaseControlTemplate}"  FontFamily="Calibri" Width="30" FontSize="14" VerticalContentAlignment="Center" Padding="5,0,5,0" BorderBrush="#FFA1A1A1" VerticalAlignment="Center" LostFocus="txtpagerecord_LostFocus" KeyUp="txtpagerecord_KeyUp" />
                    <Label x:Name="lbltotalrecord" FontSize="14" FontFamily="Calibri" FontWeight="Regular" Foreground="#ff53555E" Width="40" Height="30" Margin="3,0,0,0" VerticalAlignment="Center" VerticalContentAlignment="Center"></Label>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="4" VerticalAlignment="Center">
                    <Button Style="{StaticResource btnBlue}" x:Name="btnNext" FontFamily="Calibri" Height="13"  FontSize="16" BorderBrush="Transparent" Foreground="Transparent" FontWeight="Bold" MaxWidth="20" Width="20" Cursor="Hand" VerticalAlignment="Center" Background="Transparent" Click="btnNext_Click" >
                        <Image Source="/LIT.Core;component/Media/Images/next_move.png"></Image>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="5" VerticalAlignment="Center">
                    <Button Style="{StaticResource btnBlue}"  x:Name="btnLast" FontFamily="Calibri" Height="15"  FontSize="16" BorderBrush="Transparent" Foreground="Transparent" FontWeight="Bold" MaxWidth="20" Width="20" Cursor="Hand" VerticalAlignment="Center" Background="Transparent" Click="btnLast_Click" >
                        <Image Source="/LIT.Core;component/Media/Images/next_shift.png"></Image>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="6" VerticalAlignment="Center">
                    <ComboBox x:Name="CmbBookingItemsList" FontFamily="Calibri" Cursor="Hand" Width="100" Height="20" FontSize="14" Padding="5,0,5,0" BorderBrush="#FFA1A1A1" VerticalAlignment="Center"  SelectionChanged="CmbBookingItemsList_SelectionChanged" VerticalContentAlignment="Center">
                    </ComboBox>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="8" VerticalAlignment="Center">
                    <Button Command="SystemCommands.CloseWindowCommand" FontFamily="Calibri" Template="{StaticResource ButtonBaseTemplate}" Background="Transparent"  Foreground="#FFA1A1A1" BorderBrush="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center" Content="&#10006;"  Cursor="Hand" Padding="0,0,0,0"  MouseEnter="msCrossEnter" MouseLeave="msCrossLeave" FontSize="14" >
                    </Button>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="9" VerticalAlignment="Center">
                    <Border Width="auto" Height=".5" Background="#c9c9c9" Margin="0,0,0,10"></Border>
                </StackPanel>
            </Grid>
        </StackPanel>
        <!--#Top Header-->

        <StackPanel Margin="10,55,10,10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="ssd">
            <Grid  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="0">
                    <Label x:Name="lblBookingname" Content="Booking Name" FontFamily="Calibri" Width="100" Height="30" FontSize="14" HorizontalAlignment="Left"></Label>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBox Template="{StaticResource TextBoxBaseControlTemplate}" x:Name="txtbookingname" FontFamily="Calibri" Width="480" FontSize="14" Padding="5,0,5,0" BorderBrush="#FFA1A1A1" SelectionOpacity="0" Height="25" IsReadOnly="True" VerticalContentAlignment="Center" />
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="2">
                    <Label x:Name="lblBookingID" Content="Booking ID" FontFamily="Calibri" Width="80" Height="30" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="3" VerticalAlignment="Center">
                    <Grid>
                    <TextBox Template="{StaticResource TextBoxBaseControlTemplate}" x:Name="txtbookingAutoID" FontFamily="Calibri" Width="100" FontSize="14" Padding="5,0,5,0" BorderBrush="#FFA1A1A1" Background="#e9e9e9" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center"  VerticalContentAlignment="Center" IsReadOnly="True" />
                        <TextBox Template="{StaticResource TextBoxBaseControlTemplate}" x:Name="txtbookingID" FontFamily="Calibri" Width="100" FontSize="14" Padding="5,0,5,0" BorderBrush="#FFA1A1A1" Background="#e9e9e9" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center"  VerticalContentAlignment="Center" Visibility="Collapsed" IsReadOnly="True" />
                    </Grid>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="9" >
                    <TabControl MinHeight="479" Background="#f9f9f9" x:Name="topanelgrid" >
                        <TabItem Header="Items" Style="{StaticResource TabItemLightGrey}" Width="80" FontSize="16" Height="35" Cursor="Hand">
                            <StackPanel>
                                <StackPanel Visibility="Visible" HorizontalAlignment="Stretch" >
                                    <Grid Margin="10,0,10,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition  />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
                                            <Label Name="lbladditems" Content="Booking Items : " FontWeight="Regular" FontFamily="Calibri" FontSize="14"/>
                                        </StackPanel>
                                        <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">

                                            <Button Content="&#43; Add" Style="{StaticResource btnBlue}" Name="BtnBookingEditAdd" VerticalAlignment="Center" HorizontalAlignment="Left" VerticalContentAlignment="Center" FontFamily="Calibri" Height="25" FontSize="16" BorderBrush="#FF579F00" Foreground="#FF579F00" FontWeight="Bold"  Cursor="Hand" Click="BtnBookingEditAdd_Click">
                                                <Button.Background>
                                                    <SolidColorBrush Color="#FF579F00" Opacity="0"/>
                                                </Button.Background>

                                            </Button>
                                        </StackPanel>
                                    </Grid>


                                </StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <StackPanel  CanHorizontallyScroll="True">

                                        <DataGrid Grid.Column="0" Grid.Row="0" x:Name="dgBookingedited" BorderThickness="1,1,1,0" BorderBrush="#c9c9c9" AutoGenerateColumns="False" CanUserAddRows="False" HorizontalGridLinesBrush="#C9C9C9" VerticalGridLinesBrush="#C9C9C9" Height="120" CellEditEnding="dgBookingedited_CellEditEnding" LayoutUpdated="dgBookingedited_LayoutUpdated" Background="White" HorizontalScrollBarVisibility="Hidden"
                                                  SelectedCellsChanged="dgBookingedited_SelectedCellsChanged"
                           RowDetailsVisibilityMode="VisibleWhenSelected" SelectionUnit="Cell" SelectionMode="Extended"
                      behavior:NewSingleClickDataGridBehavior.EnableSingleClickEditing="True" 
                                            >

                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="ItineraryID" Binding="{Binding ItineraryID}" FontSize="14" FontFamily="Calibri" Visibility="Hidden" />
                                                <DataGridTextColumn Header="SupplierID" Binding="{Binding SupplierID}" FontSize="14" FontFamily="Calibri" Visibility="Hidden" />
                                                <DataGridTextColumn Header="ServiceTypeID" Binding="{Binding ServiceTypeID}" FontSize="14" FontFamily="Calibri"  Visibility="Hidden" />
                                                <DataGridTextColumn Header="ServiceID" Binding="{Binding ServiceID}" FontSize="14" FontFamily="Calibri"  Visibility="Hidden" />
                                                <DataGridTextColumn Header="BkgCurrencyID" Binding="{Binding BkgCurrencyID}" FontSize="14" FontFamily="Calibri" Visibility="Hidden" />
                                                <DataGridTextColumn Header="PricingOptionId" Binding="{Binding PricingOptionId}" FontSize="14" FontFamily="Calibri" Visibility="Hidden" />
                                                <DataGridTextColumn Header="PricingRateID" Binding="{Binding PricingRateID}" FontSize="14" FontFamily="Calibri" Visibility="Hidden" />

                                                <DataGridTextColumn Header="Description" x:Name="chbDescription" Binding="{Binding ItemDescription}" FontSize="14" FontFamily="Calibri" FontWeight="Regular"  Width="*" IsReadOnly="True">
                                                    <DataGridTextColumn.HeaderStyle>
                                                        <Style TargetType="DataGridColumnHeader">
                                                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                                                            <Setter Property="VerticalAlignment" Value="Stretch" />
                                                            <Setter Property="Foreground" Value="#252E39" />
                                                            <Setter Property="FontSize" Value="14" />
                                                            <Setter Property="FontWeight" Value="Medium" />
                                                            <Setter Property="FontFamily" Value="Calibri"/>
                                                        </Style>
                                                    </DataGridTextColumn.HeaderStyle>
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Left" />
                                                            <Setter Property="VerticalAlignment" Value="Center" />
                                                            <Setter Property="Padding" Value="3" />
                                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                                            <Setter Property="Padding" Value="5 0 0 0" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Ref" x:Name="chbRef" Binding="{Binding Ref}" FontSize="14" FontFamily="Calibri" FontWeight="Regular"  Width="50" IsReadOnly="True">
                                                    <DataGridTextColumn.HeaderStyle>
                                                        <Style TargetType="DataGridColumnHeader">
                                                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                                                            <Setter Property="VerticalAlignment" Value="Stretch" />
                                                            <Setter Property="Foreground" Value="#252E39" />
                                                            <Setter Property="FontSize" Value="14" />
                                                            <Setter Property="FontWeight" Value="Medium" />
                                                            <Setter Property="FontFamily" Value="Calibri"/>
                                                        </Style>
                                                    </DataGridTextColumn.HeaderStyle>
                                                    <DataGridTextColumn.ElementStyle >
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Left" />
                                                            <Setter Property="FontSize" Value="14" />
                                                            <Setter Property="FontWeight" Value="Medium" />
                                                            <Setter Property="FontFamily" Value="Calibri" />
                                                            <Setter Property="HorizontalAlignment" Value="Left" />
                                                            <Setter Property="VerticalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridComboBoxColumn Header="Status" x:Name="CmbRequestStatus"  DisplayMemberPath="."
                                             SelectedItemBinding="{Binding SelectedItemRequstStatus, UpdateSourceTrigger=PropertyChanged}"  Width="*">

                                                    <DataGridComboBoxColumn.HeaderStyle>
                                                        <Style TargetType="DataGridColumnHeader">
                                                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                                                            <Setter Property="Foreground" Value="#252E39" />
                                                            <Setter Property="FontSize" Value="14" />
                                                            <Setter Property="FontWeight" Value="Medium" />
                                                            <Setter Property="FontFamily" Value="Calibri" />
                                                        </Style>
                                                    </DataGridComboBoxColumn.HeaderStyle>
                                                    <DataGridComboBoxColumn.ElementStyle >
                                                        <Style TargetType="ComboBox">
                                                            <Setter Property="ItemsSource" Value="{Binding Path=ListofRequestStatusedit, Mode=OneWay}" />
                                                            <Setter Property="IsSynchronizedWithCurrentItem" Value="False"/>
                                                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                                                            <Setter Property="HorizontalContentAlignment" Value="Left" />
                                                            <Setter Property="VerticalAlignment" Value="Center" />
                                                            <Setter Property="FontFamily" Value="Calibri" />
                                                            <Setter Property="FontSize" Value="14" />
                                                            <Setter Property="Padding" Value="15,0,0,0" />
                                                        </Style>
                                                    </DataGridComboBoxColumn.ElementStyle>
                                                    <DataGridComboBoxColumn.EditingElementStyle>
                                                        <Style TargetType="ComboBox">
                                                            <Setter Property="ItemsSource" Value="{Binding Path=ListofRequestStatusedit, Mode=OneWay}"/>
                                                            <Setter Property="IsDropDownOpen" Value="True" />
                                                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                                                            <Setter Property="HorizontalContentAlignment" Value="Left" />
                                                            <Setter Property="VerticalAlignment" Value="Center" />
                                                            <Setter Property="FontFamily" Value="Calibri" />
                                                            <Setter Property="Padding" Value="15,0,0,0" />
                                                            <EventSetter Event="SelectionChanged" Handler="RequestSelectionChanged" />

                                                        </Style>

                                                    </DataGridComboBoxColumn.EditingElementStyle>

                                                </DataGridComboBoxColumn>
                                                <DataGridTemplateColumn Header="Date" x:Name="chbDate" Width="110">
                                                    <DataGridTemplateColumn.HeaderStyle>
                                                        <Style TargetType="DataGridColumnHeader">
                                                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                                                            <Setter Property="VerticalAlignment" Value="Stretch" />
                                                            <Setter Property="Foreground" Value="#252E39" />
                                                            <Setter Property="FontSize" Value="14" />
                                                            <Setter Property="FontWeight" Value="Medium" />
                                                            <Setter Property="FontFamily" Value="Calibri"/>
                                                        </Style>
                                                    </DataGridTemplateColumn.HeaderStyle>
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <StackPanel>
                                                                <DatePicker x:Name="Txtstartdt"
                                                                            
                                                                            SelectedDate="{Binding StartDate, UpdateSourceTrigger=PropertyChanged}" FontFamily="Calibri" Width="100" Height="24" FontSize="14" BorderBrush="#FFA1A1A1" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" BorderThickness="0,0,0,0" SelectedDateChanged="Txtstartdt_SelectedDateChanged" >
                                                                    <DatePicker.Background>
                                                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                                            <GradientStop Color="White"/>
                                                                            <GradientStop Color="White" Offset="1"/>
                                                                        </LinearGradientBrush>
                                                                    </DatePicker.Background>
                                                                </DatePicker>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                    <DataGridTemplateColumn.CellEditingTemplate>
                                                        <DataTemplate>
                                                            <StackPanel>
                                                                <DatePicker x:Name="Txtstartdt"
                                                                            
                                                                            SelectedDate="{Binding StartDate, UpdateSourceTrigger=PropertyChanged}" FontFamily="Calibri" Width="100" Height="24" FontSize="14" BorderBrush="#FFA1A1A1" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" BorderThickness="0,0,0,0" SelectedDateChanged="Txtstartdt_SelectedDateChanged" >
                                                                    <DatePicker.Background>
                                                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                                            <GradientStop Color="White"/>
                                                                            <GradientStop Color="White" Offset="1"/>
                                                                        </LinearGradientBrush>
                                                                    </DatePicker.Background>
                                                                </DatePicker>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellEditingTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridTextColumn Header="Nt/Days" x:Name="chbNt" Binding="{Binding NtsDays}" FontSize="14" FontFamily="Calibri" FontWeight="Regular"   Width="*">
                                                    <DataGridTextColumn.HeaderStyle>
                                                        <Style TargetType="DataGridColumnHeader">
                                                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                                                            <Setter Property="VerticalAlignment" Value="Stretch" />
                                                            <Setter Property="Foreground" Value="#252E39" />
                                                            <Setter Property="FontSize" Value="14" />
                                                            <Setter Property="FontWeight" Value="Medium" />
                                                            <Setter Property="FontFamily" Value="Calibri"/>
                                                        </Style>
                                                    </DataGridTextColumn.HeaderStyle>
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                            <Setter Property="VerticalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Qty" x:Name="chbQty" Binding="{Binding Qty}" FontSize="14" FontFamily="Calibri" FontWeight="Regular" MinWidth="70"  Width="*">
                                                    <DataGridTextColumn.HeaderStyle>
                                                        <Style TargetType="DataGridColumnHeader">
                                                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                                                            <Setter Property="VerticalAlignment" Value="Stretch" />
                                                            <Setter Property="Foreground" Value="#252E39" />
                                                            <Setter Property="FontSize" Value="14" />
                                                            <Setter Property="FontWeight" Value="Medium" />
                                                            <Setter Property="FontFamily" Value="Calibri"/>
                                                        </Style>
                                                    </DataGridTextColumn.HeaderStyle>
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                            <Setter Property="VerticalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>


                                                <DataGridTemplateColumn Header="Net (total)" x:Name="chbNet"  MinWidth="65"  Width="*" IsReadOnly="True">
                                                    <DataGridTemplateColumn.HeaderStyle>
                                                        <Style TargetType="DataGridColumnHeader">
                                                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                            <Setter Property="VerticalAlignment" Value="Center" />
                                                            <Setter Property="Foreground" Value="#252E39" />
                                                            <Setter Property="FontSize" Value="14" />
                                                            <Setter Property="FontWeight" Value="Medium" />
                                                            <Setter Property="FontFamily" Value="Calibri"/>
                                                        </Style>
                                                    </DataGridTemplateColumn.HeaderStyle>
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <StackPanel>
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="1*" />
                                                                        <ColumnDefinition Width="auto" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Grid.Column="0" Text="{Binding ItinCurDisplayFormat }" FontFamily="Calibri" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="0,3,5,0" Margin="0,0,5,0" />
                                                                    <TextBlock Grid.Column="1" Text="{Binding Nettotal,StringFormat=N2}" FontFamily="Calibri" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="0,3,5,0" Margin="0,0,5,0"  />
                                                                </Grid>
                                                            </StackPanel>

                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridTemplateColumn Header="Gross (final)" x:Name="chbGross"  MinWidth="80"  Width="*" IsReadOnly="True">
                                                    <DataGridTemplateColumn.HeaderStyle>
                                                        <Style TargetType="DataGridColumnHeader">
                                                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                            <Setter Property="Foreground" Value="#252E39" />
                                                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                                                            <Setter Property="VerticalAlignment" Value="Stretch" />
                                                            <Setter Property="FontSize" Value="14" />
                                                            <Setter Property="FontWeight" Value="Medium" />
                                                            <Setter Property="FontFamily" Value="Calibri"/>
                                                        </Style>
                                                    </DataGridTemplateColumn.HeaderStyle>

                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <StackPanel>
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="1*" />
                                                                        <ColumnDefinition Width="auto" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Grid.Column="0" Text="{Binding ItinCurDisplayFormat }" FontFamily="Calibri" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="0,3,5,0" Margin="0,0,5,0" />
                                                                    <TextBlock Grid.Column="1" Text="{Binding Grossfinal,StringFormat=N2}" FontFamily="Calibri" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="0,3,5,0" Margin="0,0,5,0"  />
                                                                </Grid>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridCheckBoxColumn Width="*" Header="Invoiced" x:Name="ChbInvoiced" Binding="{Binding Invoiced, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                                    <DataGridCheckBoxColumn.CellStyle>
                                                        <Style>
                                                            <EventSetter Event="CheckBox.Checked" Handler="ChbInvoicedChecked"/>
                                                        </Style>
                                                    </DataGridCheckBoxColumn.CellStyle>
                                                    <DataGridCheckBoxColumn.HeaderStyle>
                                                        <Style TargetType="DataGridColumnHeader">
                                                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                            <Setter Property="Foreground" Value="#252E39" />
                                                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                                                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                            <Setter Property="VerticalAlignment" Value="Stretch" />
                                                            <Setter Property="FontSize" Value="14" />
                                                            <Setter Property="FontWeight" Value="Medium" />
                                                            <Setter Property="FontFamily" Value="Calibri" />
                                                        </Style>
                                                    </DataGridCheckBoxColumn.HeaderStyle>
