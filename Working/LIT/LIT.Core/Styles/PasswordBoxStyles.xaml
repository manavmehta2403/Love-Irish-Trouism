<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:LIT.Core.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/LIT.Core;component/Themes/Generic.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- Common ControlTemplate for PasswordBox and BindablePasswordBox -->
    <ControlTemplate x:Key="CustomPasswordBoxTemplate" TargetType="{x:Type Control}">
        <Border CornerRadius="4"
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="1">
            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
        </Border>
    </ControlTemplate>

    <!-- Style for PasswordBox -->
    <Style x:Key="CustomPassBoxStyle" TargetType="{x:Type PasswordBox}"  >
        <Setter Property="Template" Value="{StaticResource CustomPasswordBoxTemplate}" />
    </Style>

    <!-- Style for BindablePasswordBox -->
    <Style x:Key="CustomBindablePassBoxStyle" TargetType="{x:Type controls:BindablePasswordBox}"  >
        <Setter Property="Template" Value="{StaticResource CustomPasswordBoxTemplate}" />
    </Style>
</ResourceDictionary>