<!-- TimePickerTextBoxStyle.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:LIT.Core.Controls.TimePickerControl">

    <Style TargetType="local:TimePickerTextBox">
        <!-- Include the setters for properties here -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:TimePickerTextBox">
                    <!-- Define the template for TimePickerTextBox -->
                    <TextBox x:Name="PART_TextBox" BorderThickness="0" Background="Transparent" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
